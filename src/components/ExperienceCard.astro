---
import type { WorkExperienceItem } from '../interfaces/Interface'
const { title, titleEN, company, period, description, descriptionEN, technologies } = Astro.props as WorkExperienceItem;
---

<div class="relative pl-12">

    <!-- <div class="absolute left-[-6px] top-0 w-3 h-3 rounded-full bg-orange-600 ring-4 ring-orange-100 transition-transform duration-300 hover:scale-125"></div> -->
    <div class="bg-gradient-to-br from-blue-900 to-blue-400 rounded-xl shadow-[0_4px_20px_rgba(0,0,0,0.05)] hover:shadow-[0_4px_25px_rgba(0,0,0,0.1)] transition-all duration-300 overflow-hidden group">
        <div class="h-1 w-full bg-gradient-to-r from-orange-400 to-orange-600"></div>
        <div class="p-8">

            <div class="flex flex-col md:flex-row md:justify-between md:items-start gap-4 mb-6">
                <div>
                    <h3 class="text-xl font-bold text-yellow-400 group-hover:text-orange-600 transition-colors" data-lang="es">
                        {title}
                    </h3>
                    <h3 class="text-xl font-bold text-orange-700 group-hover:text-orange-600 transition-colors hidden" data-lang="en">
                        {titleEN}
                    </h3>
                    <p class="text-gray-600 mt-1">{company}</p>
                </div>
                <span class="inline-flex px-4 py-1 rounded-full text-orange-700 bg-orange-50 text-sm font-medium">
                    {period}
                </span>
            </div>

            <div class="mb-6">
                <div class="text-gray-600" data-lang="es">
                    <ul class="space-y-3">
                        {description.map(desc => (
                            <li class="flex items-start">
                                <span class="inline-block w-2 h-2 mt-2 mr-2 bg-orange-600 rounded-full"></span>
                                <span>{desc}</span>
                            </li>
                        ))}
                    </ul>
                </div>

                <div class="text-gray-600" data-lang="en">
                    <ul class="space-y-3">
                        {descriptionEN.map(desc => (
                            <li class="flex items-start">
                                <span class="inline-block w-2 h-2 mt-2 mr-2 bg-orange-600 rounded-full"></span>
                                <span>{desc}</span>
                            </li>
                        ))}
                    </ul>
                </div>

            </div>

            <div class="flex flex-wrap gap-2">
                {technologies.map(tech => (
                    <span class="px-4 py-1.5 bg-orange-50 text-orange-700 rounded-full text-sm font-medium hover:bg-orange-100 transition-colors cursor-default">
                        {tech}
                    </span>
                ))}
            </div>
        </div>
    </div>
</div>